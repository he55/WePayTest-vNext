@page
@model WePayServer.Pages.Order.IndexModel

@{
    ViewData["Title"] = "订单";
}

<h1>订单</h1>

<p>
    <a asp-page="Create">创建订单</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                订单号
            </th>
            <th>
                订单金额
            </th>
            <th>
                支付状态
            </th>
            <th>
                创建时间
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WePayOrder)
        {
            <tr>
                <td>
                    @item.OrderId
                </td>
                <td>
                    @item.OrderAmount.ToString("F2")
                </td>
                <td>
                    @if (item.IsPay)
                    {
                        <span style="color:green;">已支付</span>
                    }
                    else
                    {
                        <span>未支付</span>
                    }
                </td>
                <td>
                    @DateTimeOffset.FromUnixTimeMilliseconds(item.CreateTime).LocalDateTime
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">明细</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
