@page
@model WePayServer.Pages.Order.DeleteModel

@{
    ViewData["Title"] = "删除";
}

<h1>是否确认删除？</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            订单号
        </dt>
        <dd class="col-sm-10">
            @Model.Order.OrderId
        </dd>
        <dt class="col-sm-2">
            订单金额
        </dt>
        <dd class="col-sm-10">
            @Model.Order.OrderAmount.ToString("F2")
        </dd>
        <dt class="col-sm-2">
            Code
        </dt>
        <dd class="col-sm-10">
            @Model.Order.OrderCode
        </dd>
        <dt class="col-sm-2">
            支付状态
        </dt>
        <dd class="col-sm-10">
            @if (Model.Order.IsPay)
            {
                <span style="color:green;">已支付</span>
            }
            else
            {
                <span>未支付</span>
            }
        </dd>
        <dt class="col-sm-2">
            创建时间
        </dt>
        <dd class="col-sm-10">
            @DateTimeOffset.FromUnixTimeMilliseconds(Model.Order.CreateTime).LocalDateTime
        </dd>
        <dt class="col-sm-2">
            更新时间
        </dt>
        <dd class="col-sm-10">
            @DateTimeOffset.FromUnixTimeMilliseconds(Model.Order.UpdateTime).LocalDateTime
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Order.Id" />
        <input type="submit" value="删除" class="btn btn-danger" /> |
        <a asp-page="./Index">返回列表</a>
    </form>
</div>
